---
import Section from "./Section.astro";
import { Image } from "astro:assets";
import type { ProjectProps } from "@types";

interface Props {
  projects: ProjectProps[];
}

const { projects } = Astro.props;
---

<Section text="Featured Projects" href="projects">
  <div class="flex flex-col gap-12">
    {
      projects.map(({ name, summary, image, linkPreview, linkSource }, index) => {
        const top = 98 + index * 80; 
        return (
          <div
            style={`top: ${top}px;`}
            class="sticky rounded-2xl border border-neutral/20 bg-black"
          >
            <div class="bg-difu relative z-[1] grid min-h-[550px] w-full grid-rows-2 rounded-2xl bg-[#1c232d]/85 before:absolute before:inset-0 before:z-[-1] before:rounded-2xl before:bg-[url(/raja.png)] before:bg-repeat before:opacity-[5%] before:content-[''] sm:grid-cols-2 sm:grid-rows-1 md:h-96">
              
              <div class="flex flex-col justify-between px-6 pt-12 pb-10">
                <div>
                  <h3 class="mb-5 font-serif text-3xl font-medium text-primary">
                    {name}
                  </h3>
                  <p class="text-base text-neutral">
                    {summary}
                  </p>
                </div>

                <div class="flex gap-5 mt-6 text-white">
                  <a href={linkSource} target="_blank" class="hover:underline">Source ↗</a>
                  <a href={linkPreview} target="_blank" class="hover:underline">Preview ↗</a>
                </div>
              </div>

              {/* This container now has padding to keep diagrams from hitting the edges */}
              <div class="flex items-center justify-center overflow-hidden p-6 sm:p-8">
                <Image
                  class="h-full w-full rounded-xl object-contain object-center"
                  src={image}
                  alt={name}
                  width={736}
                  height={483}
                />
              </div>
            </div>
          </div>
        );
      })
    }
  </div>
</Section>
